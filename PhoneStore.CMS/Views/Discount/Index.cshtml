            @Html.DisplayFor(modelItem => item.DiscountTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsePercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountPercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDateUtc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDateUtc)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
