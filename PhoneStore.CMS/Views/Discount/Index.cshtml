        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).DiscountTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).UsePercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).DiscountPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).DiscountAmount)
        </th>
