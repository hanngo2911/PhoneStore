@model IList<PhoneStore.CMS.ViewModels.CreatePictureSpec>
    

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).PictureLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).MimeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).SeoFilename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).IsNew)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.PictureLink" alt="Mountain View" style="width:304px;height:228px;">
 )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MimeType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeoFilename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsNew)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
